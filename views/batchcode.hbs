<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Batch Code</title>
</head>

<body>
    <h1>Generate Batch Code</h1>
    <form action="/batchcode" method="post">
        <b>Center</b>
        <select name="center">
            {{#each centers as |c|}}
            <option value="{{c.id}}">{{c.name}}</option>
            {{/each}}
        </select>

        <br>
        <b>Season</b>
        <select name="season">
            {{#each seasons as |s|}}
            <option value="{{s.id}}">{{s.name}}</option>
            {{/each}}
        </select>
        <br>

        <b>Course</b>
        <select name="course">
            {{#each courses as |co|}}
            <option value="{{co.id}}">{{co.name}}</option>
            {{/each}}
        </select>
        <br>

        <b>Year</b>
        <select name="year">
            {{#each years as |y|}}
            <option value="{{y}}">{{y}}</option>
            {{/each}}
        </select>
        <br>

        <b>Batch Number : </b>
        <input type="number" min="1" max="5" name="batchno">
        <br>

        <b>Start : </b>
        <input type="date" name="start">

        <b>End : </b>
        <input type="date" name="end">

        <br>
        <input type="reset" value="Reset">
        {{!-- <br> --}}
        <input type="submit" value="Submit">

    </form>
</body>

</html>